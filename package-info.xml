<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>live627:shining_bear</id>
	<name>Shiny Bear</name>
	<version>1.0 Alpha</version>
	<type>modification</type>

	<install for="2.1 - 2.1.99">
		<readme type="file" parsebbc="true">install.txt</readme>
		<credits url="livemods.net" license="MPL 1.1" copyright="&copy; 2012">Shiny Bear</credits>
		<hook hook="integrate_default_action" function="ShinyBearIntegration::default_action" file="$sourcedir/Class-ShinyBear.php">Add the front page</hook>
		<hook hook="integrate_pre_log_stats" function="ShinyBearIntegration::pre_log_stats" file="$sourcedir/Class-ShinyBear.php">Add the front page</hook>
		<hook hook="integrate_actions" function="ShinyBearIntegration::actions" file="$sourcedir/Class-ShinyBear.php">Add the front page</hook>
		<hook hook="integrate_menu_buttons" function="ShinyBearIntegration::buttons" file="$sourcedir/Class-ShinyBear.php">Add the front page</hook>
		<hook hook="integrate_admin_areas" function="ShinyBearIntegration::admin_areas" file="$sourcedir/Class-ShinyBear.php">Add the front page</hook>
		<hook hook="integrate_profile_areas" function="ShinyBearIntegration::profile_areas" file="$sourcedir/Class-ShinyBear.php">Add the front page</hook>
		<hook hook="integrate_pre_load" function="ShinyBearIntegration::pre_load" file="$sourcedir/Class-ShinyBear.php">Add the front page</hook>
		<hook hook="integrate_load_theme" function="ShinyBearIntegration::load_theme" file="$sourcedir/Class-ShinyBear.php">Add the front page</hook>
		<hook hook="integrate_core_features" function="ShinyBearIntegration::core_features" file="$sourcedir/Class-ShinyBear.php">Add the front page</hook>
		<hook hook="integrate_load_permissions" function="ShinyBearIntegration::load_permissions" file="$sourcedir/Class-ShinyBear.php">Add the front page</hook>
		<database>install.php</database>
		<require-dir name="sb_extra" destination="$boarddir" />
		<require-file name="Class-ShinyBear.php" destination="$sourcedir" />
		<require-file name="Class-ShinyBearModules.php" destination="$sourcedir" />
		<require-file name="ShinyBear.english.php" destination="$languagedir" />
		<require-file name="ShinyBear.template.php" destination="$themedir" />
		<require-file name="shinybear.css" destination="$themedir/css" />
		<require-file name="feature_sb.png" destination="$themes_dir/default/images/admin" />
		<redirect url="?action=admin;area=corefeatures#js_feature_sb" />
	</install>
	<uninstall for="2.1 - 2.1.99">
		<readme type="file" parsebbc="true">uninstall.txt</readme>
		<remove-dir name="$boarddir/sb_extra" />
		<remove-file name="$sourcedir/Class-ShinyBear.php" />
		<remove-file name="$sourcedir/Class-ShinyBearModules.php" />
		<remove-file name="$languagedir/ShinyBear.english.php" />
		<remove-file name="$themedir/ShinyBear.template.php" />
		<remove-file name="$themedir/css/shinybear.css" />
		<remove-file name="$imagesdir/admin/feature_sb.png" />
	</uninstall>

</package-info>
